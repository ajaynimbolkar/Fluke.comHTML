package com.fluke.ui{	import flash.display.*;	import flash.events.*;	import flash.text.*;		public class FlukeRotatorButton extends SimpleButton	{			// ------------------------------------------------------------- //		// Properties		// ------------------------------------------------------------- //				public var _frameMap:Array;			public var _allClips:Array;			public var _buttons:Array;			public var _mc:MovieClip;			public static var lastClip:String;							// ------------------------------------------------------------- //		// Constructor		// ------------------------------------------------------------- //			public function FlukeRotatorButton() {				addEventListener(MouseEvent.MOUSE_DOWN, rotateMe);			}						public function rotateMe(event:MouseEvent):void {}								// ------------------------------------------------------------- //		// Reset the board		// ------------------------------------------------------------- //			public function resetBoard() { 					// Hide all detail windows				for(var c:uint = 0; c < _allClips.length; c++) {					_allClips[c].visible = false;				}							// Reset all buttons				for(var i:uint = 0; i < _buttons.length; i++) {										// Unset the clicked switch					_buttons[i].clicked = false;										// Re-Set to Flat					_buttons[i].gotoAndStop(1);										_buttons[i].resetLabel();									}							}								// ------------------------------------------------------------- //		// Setters and Getters		// ------------------------------------------------------------- //					// Scene Map			public function set frameMap(a:Array):void {				_frameMap = a;							}						public function get frameMap():Array {				return _frameMap;			}										// All visible content containers			public function set allClips(a:Array):void {				_allClips = a;							}						public function get allClips():Array {				return _allClips;			}						// All visible buttons			public function set buttons(a:Array):void {				_buttons = a;							}						public function get buttons():Array {				return _buttons;			}							// Movie Clip to Rotatte			public function set mc(m:MovieClip):void {				_mc = m;							}						public function get mc():MovieClip {				return _mc;			}		}	}